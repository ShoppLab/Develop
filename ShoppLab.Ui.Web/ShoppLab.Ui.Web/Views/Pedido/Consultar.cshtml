@using ShoppLab.Mappers;

<div class="content-heading">
    <div>
        Consulta
        <small>Consulta de Pedidos - Pesquisa os pedidos existentes</small>
    </div>
</div>


<div class="card card-default">
    <div class="card-header">
        <div class="card-body">

            <div class="form-row">

                <div class="col-lg-2 mb-3">
                    @Html.Label("Data Inicial")
                    <div class="input-group mb-3">
                        <div class="input-group date" id="datetimepicker1">
                            <input type="text" id="DataInicial" class="form-control format-date" />
                            <span class="input-group-append input-group-addon">
                                <span class="input-group-text fas fa-calendar-alt"></span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 mb-3">
                    @Html.Label("Data Final")
                    <div class="input-group mb-3">
                        <div class="input-group date" id="datetimepicker1">
                            <input type="text" id="DataFinal" class="form-control format-date" />
                            <span class="input-group-append input-group-addon">
                                <span class="input-group-text fas fa-calendar-alt"></span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8 mb-3">
                    <label>Cliente</label>
                    <div class="input-group mb-3">
                        <input type="text" id="NomeCliente" class="form-control" />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" onclick="obterDadosPedidos()">Consutar</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="card card-default">
    <div class="card-header">Produtos</div>

    <div class="card-body">

        <div class="col-lg-12 mb-3">

            <table id="table-pedido" class="table table-striped my-4 w-100" style="width:100%">
                <thead>
                    <tr>
                        <th>Pedido</th>
                        <th>Data</th>
                        <th>Cliente</th>
                        <th>Preço Venda</th>
                        <th></th>
                    </tr>
                </thead>

            </table>

        </div>

    </div>
</div>


