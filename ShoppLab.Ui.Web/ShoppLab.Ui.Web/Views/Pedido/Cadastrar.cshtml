                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input class="form-control format-money" type="text" aria-label="" />
                    </div>
                </div>

                <div class="col-lg-2 mb-3">
                    <label for="">Comissão Broker</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input class="form-control format-money" type="text" aria-label="" />
                    </div>
                </div>


                <div class="col-lg-2 mb-3">
                    <label for="">ICMS entrada</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">%</span>
                        </div>
                        <input class="form-control format-money" type="text" aria-label="" />
                    </div>
                </div>

                <div class="col-lg-2 mb-3">
                    <label for="">IPI compra</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">%</span>
                        </div>
                        <input class="form-control format-money" type="text" aria-label="" />
                    </div>
                </div>

                <div class="col-lg-2 mb-3">
                    <label for="">Pagto compra em dias</label>
                    <div class="input-group mb-3">
                        <input class="form-control format-integer" type="text" aria-label="" />
                    </div>
                </div>

            </div>

            <div class="form-row">


                <div class="col-lg-2 mb-3">
                    <label for="">Pagto venda em dias</label>
                    <div class="input-group mb-3">
                        <input class="form-control format-integer" type="text" aria-label="" />
                    </div>
                </div>

                <div class="col-lg-2 mb-3">
                    <label for="">Prazo de entrega em dias</label>
                    <div class="input-group mb-3">
                        <input class="form-control format-integer" type="text" aria-label="" />
                    </div>
                </div>

                <div class="col-lg-2 mb-3">
                    <label for="">Preço de venda unitário</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text format-money">$</span>
                        </div>
                        <input class="form-control format-money" type="text" aria-label="" />
                    </div>
                </div>

                <div class="col-lg-2 mb-3">
                    <div class="input-group mb-3 mt-sm-3">
                        <button  type="submit"  class="btn btn-primary mb-2">Adicionar</button>
                    </div>
                </div>

            </div>


        </div>
    </div>
</form>

