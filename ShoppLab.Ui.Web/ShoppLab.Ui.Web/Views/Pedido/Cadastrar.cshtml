
@using ShoppLab.Ui.Web.ViewModel;

@{
    ViewBag.Title = "Pedido - cadastrar";
}

@model PedidoViewModel

<div class="content-heading">
    <div>
        Pedido
        <small>Pedido - cadastrar: Inclusão ou alteração de pedidos de venda</small>
    </div>
</div>

<form id="form-pedido" method="post">

    <div class="card card-default">
        <div class="card-header">Dados do cliente</div>
        <div class="card-body">

            <div class="form-row">

                <div class="col-lg-5 mb-3">
                    @Html.Label("Nome")
                    @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })

                </div>

                <div class="col-lg-3 mb-3">
                    @Html.Label("E-mail")
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@@</span>
                        </div>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(x => x.Email)
                </div>

                <div class="col-lg-2 mb-3">
                    @Html.LabelFor(x => x.DataRegistro)
                    <div class="input-group mb-3">
                        <div class="input-group date" id="datetimepicker1">
                            <input class="form-control format-date" type="text" />
                            <span class="input-group-append input-group-addon">
                                <span class="input-group-text fas fa-calendar-alt"></span>
                            </span>
                        </div>

                    </div>
                </div>

                <div class="col-lg-2 mb-3">
                    @Html.LabelFor(x => x.Telefone)
                    <input class="form-control format-phone" id="" type="text" placeholder="" required="" />
                </div>

            </div>
        </div>
    </div>

    <div class="card card-default">
        <div class="card-header">Itens pedido</div>
